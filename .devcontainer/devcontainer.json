{
    "name" : "CppPlayground",
    "build":{
        "dockerfile": "Dockerfile"
    },
    
    "customizations": {
        "vscode": {
            "settings": {
                "terminal.integrated.defaultProfile.linux": "bash"
            },
        
            "extensions": [
                "ms-vscode.cpptools",
                "ms-vscode.cmake-tools",
                "twxs.cmake",
                "brobeson.ctest-lab",
                "xaver.clang-format"
            ]
        }
    },
    "mounts": [
        "source=${localEnv:HOME}/.gitconfig,target=/home/developer/.gitconfig,type=bind"
    ],
    

    "remoteUser": "ubuntu"
}
