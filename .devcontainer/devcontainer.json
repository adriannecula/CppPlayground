{
    "name" : "CppPlayground",
    "build":{
        "dockerfile": "Dockerfile"
    },
    
    "customizations": {
        "vscode": {
            "settings": {
                "terminal.integrated.defaultProfile.linux": "bash"
            },
        
            "extensions": [
                "ms-vscode.cpptools",
                "ms-vscode.cmake-tools"
            ]
        }
    },
    "postCreateCommand": "sudo chown -R $(whoami):$(whoami) /workspaces"
}